<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/background_gradient">

    <TextView
        android:id="@+id/about_us_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/about_us_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This app, Taxify, is a tax calculator designed for students participating in the CBSE competition. It has been created by:\n\n- Pranjal Maurya\n- Samarth Pandey\n- Kazim\n\nUnder the guidance of our teacher, Rashmi Ma'am."
        android:textSize="16sp"
        android:lineSpacingExtra="8dp"
        android:textColor="#FFFFFF"
        android:layout_below="@id/about_us_title"/>

    <Button
        android:id="@+id/about_us_website_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visit Website"
        android:background="@drawable/button_style"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_below="@id/about_us_text"
        android:layout_centerHorizontal="true"
        android:onClick="openWebsite"/>
</RelativeLayout>
