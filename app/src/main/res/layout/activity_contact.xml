<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/background_gradient">

    <TextView
        android:id="@+id/contact_us_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/textColorPrimary"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/contact_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact_us_title"
        android:layout_marginBottom="8dp"
        android:background="@color/grayLight"
        android:hint="Name"
        android:padding="12dp"
        android:textColor="#000000"
        android:textColorHint="@color/hintColor" />

    <EditText
        android:id="@+id/contact_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact_name"
        android:layout_marginBottom="8dp"
        android:background="@color/grayLight"
        android:hint="Email"
        android:padding="12dp"
        android:textColor="#000000"
        android:textColorHint="@color/hintColor" />

    <EditText
        android:id="@+id/contact_message"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/contact_email"
        android:layout_marginBottom="16dp"
        android:background="@color/grayLight"
        android:gravity="top"
        android:hint="Message"
        android:inputType="textMultiLine"
        android:padding="12dp"
        android:textColor="#000000"
        android:textColorHint="@color/hintColor" />

    <Button
        android:id="@+id/contact_send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:textColor="@color/buttonTextColor"
        android:background="@drawable/button_rounded"
        android:padding="12dp"
        android:layout_below="@id/contact_message"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/contact_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact_send_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Email: samarthpandey8318@gmail.com\nPhone: 9569261090"
        android:textColor="#02FFE7" />

    <Button
        android:id="@+id/contact_website_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visit Website"
        android:textColor="@color/buttonTextColor"
        android:background="@drawable/button_rounded"
        android:padding="12dp"
        android:layout_below="@id/contact_info"
        android:layout_centerHorizontal="true"
        android:onClick="openWebsite"/>
</RelativeLayout>
